{
  "Environment": "Development",
  "Serilog": {
    "Using": [
      "Serilog",
      "Serilog.Exceptions",
      "Serilog.Sinks.Async",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Console",
      "Serilog.Enrichers.Environment"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "System": "Debug",
        "Microsoft": "Debug",
        "Microsoft.EntityFrameworkCore": "Debug"
      }
    },
    "WriteTo": {
      "1": {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "C:\\Temp\\Logs\\SchoolMngr-Services-Backoffice-.txt",
                "rollingInterval": "Day",
                "rollOnFileSizeLimit": "true",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {MachineName} {ProcessId} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    },
    "Enrich": [ "WithExceptionDetails", "DebuggerAttached" ]
  },
  "MetricEndpointsOptions": {
    "MetricsEndpointEnabled": true,
    "MetricsTextEndpointEnabled": false,
    "EnvironmentInfoEndpointEnabled": true
  },
  "InfrastructureSection": {
    "EventBus": {
      "UseEventBus": true,
      "Host": "localhost",
      "Port": 5672,
      "Username": "guest",
      "Password": "guest",
      "QuequeName": "backoffice_queque"
    }
  },
  "DALSection": {
    "UseDatabase": true,
    "DatabaseName": "BackofficeDB",
    "DatabaseConnection": "Server=(localdb)\\MSSQLLocalDB;Database=SchoolMngr;Trusted_Connection=True;",
    "EnableDetailedDebug": true
  }
}
